  <style>
    :root {
      --primary: #1d4ed8;   /* Deep blue */
      --primary-dark: #0f172a;
      --accent: #facc15;    /* Warm yellow */
      --bg: #0b1120;
      --light: #f9fafb;
      --muted: #9ca3af;
      --card-bg: #020617;
      --border: #1f2937;
      --danger: #dc2626;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: radial-gradient(circle at top, #1e293b 0, #020617 45%, #000 100%);
      color: var(--light);
      line-height: 1.6;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    img {
      max-width: 100%;
      display: block;
    }

    /* Layout */
    .container {
      width: 100%;
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 1.25rem;
    }

    header {
      position: sticky;
      top: 0;
      z-index: 50;
      backdrop-filter: blur(18px);
      background: rgba(15, 23, 42, 0.92);
      border-bottom: 1px solid rgba(148, 163, 184, 0.2);
    }

    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 0;
    }

    .logo-group {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    /* NEW: logo image styles */
    .logo-img {
      height: 42px;
      width: auto;
    }

    .logo-icon {
      width: 36px;
      height: 36px;
      border-radius: 0.75rem;
      background: radial-gradient(circle at 20% 0, #38bdf8, #1d4ed8 45%, #020617 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 30px rgba(37, 99, 235, 0.5);
    }

    .logo-icon svg {
      width: 22px;
      height: 22px;
      fill: none;
      stroke: #e5e7eb;
      stroke-width: 1.6;
    }

    .logo-text-main {
      font-weight: 700;
      letter-spacing: 0.03em;
      font-size: 0.85rem;
      text-transform: uppercase;
    }

    .logo-text-sub {
      font-size: 0.7rem;
      text-transform: uppercase;
      color: var(--muted);
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 1.75rem;
      font-size: 0.9rem;
    }

    .nav-links a {
      color: var(--muted);
      font-weight: 500;
      position: relative;
    }

    .nav-links a::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -4px;
      width: 0;
      height: 2px;
      background: linear-gradient(to right, #38bdf8, #fbbf24);
      border-radius: 999px;
      transition: width 0.2s ease-out;
    }

    .nav-links a:hover {
      color: var(--light);
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    .nav-cta {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .nav-phone {
      font-size: 0.9rem;
      color: var(--muted);
    }

    .nav-phone strong {
      color: var(--accent);
      letter-spacing: 0.02em;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.6rem 1.25rem;
      border-radius: 999px;
      border: 1px solid transparent;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.1s ease-out, box-shadow 0.1s ease-out, background 0.2s, border-color 0.2s;
      white-space: nowrap;
    }

    .btn-primary {
      background: linear-gradient(to right, #1d4ed8, #0ea5e9);
      box-shadow: 0 12px 30px rgba(37, 99, 235, 0.55);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 40px rgba(37, 99, 235, 0.7);
    }

    .btn-outline {
      border-color: rgba(148, 163, 184, 0.45);
      color: var(--muted);
      background: rgba(15, 23, 42, 0.9);
    }

    .btn-outline:hover {
      border-color: var(--accent);
      color: var(--light);
      background: rgba(15, 23, 42, 0.98);
      transform: translateY(-1px);
    }

    /* Mobile nav toggle */
    .nav-toggle {
      display: none;
      background: none;
      border: none;
      color: var(--light);
      cursor: pointer;
    }

    .nav-toggle span {
      display: block;
      width: 20px;
      height: 2px;
      border-radius: 999px;
      background: var(--light);
      margin: 4px 0;
      transition: transform 0.2s, opacity 0.2s;
    }

    .nav-open .nav-toggle span:nth-child(1) {
      transform: translateY(6px) rotate(45deg);
    }
    .nav-open .nav-toggle span:nth-child(2) {
      opacity: 0;
    }
    .nav-open .nav-toggle span:nth-child(3) {
      transform: translateY(-6px) rotate(-45deg);
    }

    .nav-mobile {
      display: none;
      flex-direction: column;
      gap: 0.75rem;
      padding-bottom: 0.85rem;
    }

    .nav-mobile a {
      color: var(--muted);
      font-size: 0.9rem;
    }

    .nav-mobile a:hover {
      color: var(--light);
    }

    /* Hero */
    .hero {
      padding: 3.5rem 0 3rem;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 3fr) minmax(0, 2.5fr);
      gap: 2.75rem;
      align-items: center;
    }

    .eyebrow {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: #7dd3fc;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.15rem 0.75rem;
      border-radius: 999px;
      background: rgba(15, 23, 42, 0.95);
      border: 1px solid rgba(56, 189, 248, 0.4);
      margin-bottom: 0.75rem;
    }

    .eyebrow-dot {
      width: 7px;
      height: 7px;
      border-radius: 999px;
      background: #facc15;
    }

    .hero h1 {
      font-size: clamp(2.1rem, 3vw + 1.6rem, 3.15rem);
      line-height: 1.08;
      margin-bottom: 1rem;
    }

    .hero h1 span {
      background: linear-gradient(to right, #38bdf8, #facc15);
      -webkit-background-clip: text;
      color: transparent;
    }

    /* NEW: big logo in hero */
    .hero-logo {
      max-width: 260px;
      width: 70%;
      margin: 0.5rem 0 1.5rem;
      display: block;
    }

    .hero-subtitle {
      color: var(--muted);
      max-width: 36rem;
      font-size: 0.98rem;
      margin-bottom: 1.5rem;
    }

    .hero-cta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.9rem;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .hero-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      font-size: 0.8rem;
      color: var(--muted);
    }

    .hero-meta span {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .dot {
      width: 5px;
      height: 5px;
      border-radius: 999px;
      background: rgba(148, 163, 184, 0.8);
    }

    /* Hero card */
    .hero-card {
      background: radial-gradient(circle at 0 0, rgba(59, 130, 246, 0.25), rgba(15, 23, 42, 0.95) 40%, #020617 100%);
      border-radius: 1.5rem;
      border: 1px solid rgba(148, 163, 184, 0.4);
      box-shadow: 0 24px 70px rgba(15, 23, 42, 0.95);
      padding: 1.5rem 1.4rem;
      position: relative;
      overflow: hidden;
    }

    .hero-tagline {
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: #e5e7eb;
      margin-bottom: 0.75rem;
    }

    .hero-card-main {
      font-size: 1.15rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
    }

    .hero-card-sub {
      font-size: 0.83rem;
      color: var(--muted);
      margin-bottom: 1.1rem;
    }

    .hero-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1.25rem;
    }

    .pill {
      font-size: 0.7rem;
      padding: 0.25rem 0.7rem;
      border-radius: 999px;
      border: 1px solid rgba(148, 163, 184, 0.6);
      background: rgba(15, 23, 42, 0.92);
      color: #e5e7eb;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .hero-stats {
      display: flex;
      flex-wrap: wrap;
      gap: 1.25rem;
      border-top: 1px dashed rgba(148, 163, 184, 0.3);
      padding-top: 0.9rem;
      margin-bottom: 0.4rem;
    }

    .stat {
      font-size: 0.8rem;
      color: var(--muted);
    }

    .stat strong {
      display: block;
      font-size: 1.1rem;
      color: var(--light);
    }

    .hero-badge {
      position: absolute;
      right: 1.2rem;
      top: 1.2rem;
      padding: 0.45rem 0.75rem;
      border-radius: 999px;
      background: rgba(15, 23, 42, 0.95);
      border: 1px solid rgba(248, 250, 252, 0.35);
      font-size: 0.68rem;
      text-transform: uppercase;
      letter-spacing: 0.14em;
      color: var(--muted);
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
    }

    .hero-badge-dot {
      width: 7px;
      height: 7px;
      border-radius: 999px;
      background: #22c55e;
      box-shadow: 0 0 10px rgba(34, 197, 94, 0.8);
    }

    /* Sections */
    section {
      padding: 2.75rem 0;
      border-top: 1px solid rgba(15, 23, 42, 0.9);
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      gap: 1rem;
      margin-bottom: 1.75rem;
    }

    .section-title {
      font-size: 1.35rem;
      font-weight: 700;
    }

    .section-subtitle {
      font-size: 0.9rem;
      color: var(--muted);
      max-width: 22rem;
    }

    /* Services */
    .service-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 1.2rem;
    }

    .card {
      background: radial-gradient(circle at top left, rgba(30, 64, 175, 0.4), rgba(15, 23, 42, 0.95) 40%, #020617 100%);
      border-radius: 1.1rem;
      padding: 1.1rem 1rem;
      border: 1px solid rgba(148, 163, 184, 0.35);
      box-shadow: 0 16px 40px rgba(15, 23, 42, 0.9);
    }

    .card h3 {
      font-size: 1rem;
      margin-bottom: 0.35rem;
    }

    .card p {
      font-size: 0.85rem;
      color: var(--muted);
      margin-bottom: 0.75rem;
    }

    .card ul {
      list-style: none;
      font-size: 0.78rem;
      color: #d1d5db;
    }

    .card ul li {
      margin-bottom: 0.2rem;
    }

    .card ul li::before {
      content: "•";
      color: var(--accent);
      margin-right: 0.3rem;
    }

    /* About & why us */
    .two-column {
      display: grid;
      grid-template-columns: minmax(0, 3fr) minmax(0, 2.5fr);
      gap: 1.9rem;
    }

    .tag {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: var(--muted);
      margin-bottom: 0.4rem;
    }

    .body-text {
      font-size: 0.9rem;
      color: #e5e7eb;
      margin-bottom: 0.75rem;
    }

    .highlight-box {
      background: radial-gradient(circle at top left, rgba(250, 204, 21, 0.18), rgba(15, 23, 42, 0.96) 45%, #020617 100%);
      border-radius: 1.1rem;
      border: 1px solid rgba(248, 250, 252, 0.15);
      padding: 1rem 1rem;
      font-size: 0.78rem;
      color: var(--muted);
    }

    .highlight-box strong {
      color: var(--accent);
    }

    .list-check {
      list-style: none;
      margin-top: 0.6rem;
      font-size: 0.86rem;
      color: #e5e7eb;
    }

    .list-check li {
      margin-bottom: 0.35rem;
      display: flex;
      align-items: flex-start;
      gap: 0.4rem;
    }

    .list-check span {
      display: inline-flex;
      width: 16px;
      height: 16px;
      border-radius: 999px;
      border: 1px solid rgba(52, 211, 153, 0.7);
      align-items: center;
      justify-content: center;
      font-size: 0.65rem;
      color: #22c55e;
      margin-top: 2px;
    }

    /* Service area & projects */
    .pill-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.45rem;
      margin-top: 0.6rem;
    }

    .pill-soft {
      font-size: 0.75rem;
      padding: 0.28rem 0.7rem;
      border-radius: 999px;
      background: rgba(15, 23, 42, 0.9);
      border: 1px dashed rgba(148, 163, 184, 0.5);
      color: var(--muted);
    }

    .project-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.1rem;
      margin-top: 0.6rem;
    }

    .project-card {
      border-radius: 1rem;
      border: 1px dashed rgba(148, 163, 184, 0.5);
      padding: 0.7rem 0.75rem;
      background: rgba(15, 23, 42, 0.9);
      font-size: 0.78rem;
      color: var(--muted);
    }

    .project-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.14em;
      color: #9ca3af;
      margin-bottom: 0.25rem;
    }

    .project-title {
      font-size: 0.9rem;
      color: var(--light);
      margin-bottom: 0.2rem;
    }

    /* Testimonials */
    .testimonial-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.1rem;
    }

    .testimonial {
      border-radius: 1rem;
      border: 1px solid rgba(148, 163, 184, 0.4);
      background: radial-gradient(circle at top, rgba(59, 130, 246, 0.2), rgba(15, 23, 42, 0.96) 50%);
      padding: 1rem 0.9rem;
      font-size: 0.8rem;
      color: var(--muted);
    }

    .testimonial strong {
      display: block;
      color: var(--light);
      margin-top: 0.6rem;
      font-size: 0.78rem;
    }

    .stars {
      color: #facc15;
      font-size: 0.75rem;
      margin-bottom: 0.3rem;
    }

